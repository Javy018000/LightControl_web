<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/css/inicio.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Product+Sans&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, #87CEEB, #007bff);
            font-family: 'Product Sans', sans-serif;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .card-deck {
            width: 100%;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-left: 0;
        }

        .card {
            background-color: #fff;
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            flex: 1 1 calc(100% - 40px);
            max-width: 400px;
            height: 150px;
            margin: 10px;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            display: flex;
            align-items: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
            }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            flex: 1;
            z-index: 1;
        }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 1rem;
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            color: #fff;
            border: none;
            outline: none;
            text-align: center;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .card-icon {
            font-size: 3rem;
            position: absolute;
            top: 20px;
            right: 20px;
            color: rgba(0, 0, 0, 0.1);
            z-index: 0;
        }

        .card:nth-child(1) {
            background-color: #658FFA;
            color: #fff;
        }

        .card:nth-child(2) {
            background-color: #f0ad4e;
            color: #fff;
        }

        .card:nth-child(3) {
            background-color: #d9534f;
            color: #fff;
        }

        .card:nth-child(4) {
            background-color: #5cb85c;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="card-deck">

        <div class="card">
            <i class="fas fa-exclamation-circle card-icon"></i>
            <div class="card-body">
                <h5 class="card-title">PQRS SIN ASIGNAR:</h5>
                <p class="card-text">@ViewBag.CantidadPqrsEstado1</p>
                <a href="@Url.Action("pqrssinasignar", "pqrs")" class="btn btn-primary">Ver más</a>
            </div>
        </div>

        <div class="card">
            <i class="fas fa-spinner card-icon"></i>
            <div class="card-body">
                <h5 class="card-title">PQRS EN PROCESO:</h5>
                <p class="card-text">@ViewBag.CantidadPqrsEstado2</p>
                <a href="@Url.Action("pqrsasignada", "pqrs")" class="btn btn-primary">Ver más</a>
            </div>
        </div>


        <div class="card">
            <i class="fas fa-check-circle card-icon"></i>
            <div class="card-body">
                <h5 class="card-title">PQRS CERRADAS:</h5>
                <p class="card-text">@ViewBag.CantidadPqrsEstado3</p>
                <a href="@Url.Action("pqrsresuelta", "pqrs")" class="btn btn-primary">Ver más</a>
            </div>
        </div>

        <div class="card">
            <i class="fas fa-cogs card-icon"></i>
            <div class="card-body">
                <h5 class="card-title">ORDENES DE SERVICIO ACTIVAS</h5>
                <p class="card-text">@ViewBag.CantidadOrdenesEstado2</p>
                <a href="@Url.Action("verOrdenes", "Ordenes")" class="btn btn-primary">Ver más</a>
            </div>
        </div>

    </div>

    <script>
        function adjustCardLayout() {
            const cards = document.querySelectorAll('.card');
            const width = window.innerWidth;

            cards.forEach(card => {
                if (width >= 1024) {
                    card.style.flex = '1 1 calc(30% - 40px)';
                } else if (width >= 768) {
                    card.style.flex = '1 1 calc(45% - 40px)';
                } else {
                    card.style.flex = '1 1 calc(100% - 40px)';
                }
            });
        }

        window.addEventListener('resize', adjustCardLayout);
        window.addEventListener('load', adjustCardLayout);
    </script>
</body>
</html>