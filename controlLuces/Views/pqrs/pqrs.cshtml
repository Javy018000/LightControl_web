<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear PQRS</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/pqrs.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Product+Sans&display=swap" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(to bottom, #87CEEB, #007bff);
            font-family: 'Product Sans', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            padding-top: 40px;
        }

        .container-form {
            background: rgba(255, 255, 255, 0.9);
            padding: 60px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 700px;
            margin-left: 230px;
            margin-right: 0;
            text-align: left;
        }

        .section {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f9f9f9;
        }

        h1, h2 {
            color: #333;
            text-align: center;
        }

        label {
            font-weight: bold;
            color: #555;
        }

        .required:after {
            content: "*";
            color: red;
            margin-left: 5px;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            input[type="submit"] {
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 5px;
                padding: 10px 15px;
                cursor: pointer;
                transition: background-color 0.3s, box-shadow 0.3s;
                display: block;
                margin: 0 auto;
                text-align: center;
                width: 150px;
            }

                input[type="submit"]:hover {
                    background-color: #0056b3;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
                }

            input:focus, select:focus, textarea:focus {
                border-color: #007bff;
                box-shadow: 0 0 8px #007bff;
            }

        .form-group label {
            font-weight: bold;
        }

        .tuclase {
            background-color: #007bff;
            color: #fff;
            border-radius: 10px;
            padding: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
        }

        media (max-width: 767px) {
            .container-form

        {
            padding: 15px;
        }

        .section {
            padding: 10px;
        }

        input[type="submit"] {
            width: 100%;
        }
        }
    </style>
</head>
<body>
    <div class="container-form">
        <div class="tuclase">
            <i class="fas fa-comment-alt fa-lg"></i> Formulario de PQRS
        </div>
        <form id="pqrsForm" action="@Url.Action("Enviarpqrs", "Pqrs")" method="post" enctype="multipart/form-data">
            <div class="section">
                <h2><i class="fas fa-info-circle"></i> Datos Generales</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="FechaRegistro" class="required"><i class="fas fa-calendar-alt"></i> Fecha de Registro:</label>
                            <input type="text" id="FechaRegistro" name="FechaRegistro" readonly class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Canal" class="required"><i class="fas fa-envelope"></i> Canal:</label>
                            <select id="Canal" name="Canal" required class="form-control">
                                <option value="">Seleccione un canal</option>
                                <option value="Carta">Carta</option>
                                <option value="Correo">Correo</option>
                                <option value="Presencial">Presencial</option>
                                <option value="Sistema">Sistema</option>
                                <option value="Telefono">Telefono</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="TipoPQRS" class="required"><i class="fas fa-tags"></i> Tipo de PQRS:</label>
                            <select id="TipoPQRS" name="TipoPQRS" required class="form-control">
                                <option value="">Seleccione un tipo</option>
                                <option value="Queja">Queja</option>
                                <option value="Petición">Petición</option>
                                <option value="Reclamo">Reclamo</option>
                                <option value="Sugerencia">Sugerencia</option>
                                <option value="Felicitación">Felicitación</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section">
                <h2><i class="fas fa-user"></i> Datos Usuario</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Nombre" class="required"><i class="fas fa-user"></i> Nombre:</label>
                            <input type="text" id="Nombre" name="Nombre" placeholder="Nombre" required class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Apellido" class="required"><i class="fas fa-user"></i> Apellido:</label>
                            <input type="text" id="Apellido" name="Apellido" placeholder="Apellido" required class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="TipoDoc" class="required"><i class="fas fa-id-card"></i> Tipo de Documento:</label>
                            <select id="TipoDoc" name="TipoDoc" required class="form-control">
                                <option value="">Seleccione un tipo</option>
                                <option value="Sin Datos">Sin Datos</option>
                                <option value="Cedula De Ciudadania">Cedula De Ciudadania</option>
                                <option value="Cedula De Extranjeria">Cedula De Extranjeria</option>
                                <option value="Pasaporte">Pasaporte</option>
                                <option value="Tarjeta De Identidad">Tarjeta De Identidad</option>
                                <option value="NIT">NIT</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Documento" class="required"><i class="fas fa-file-alt"></i> Documento:</label>
                            <input type="text" id="Documento" name="Documento" placeholder="Documento" required class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Telefono" class="required"><i class="fas fa-phone"></i> Teléfono:</label>
                            <input type="text" id="Telefono" name="Telefono" placeholder="Teléfono" required class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Correo" class="required"><i class="fas fa-envelope"></i> Correo:</label>
                            <input type="email" id="Correo" name="Correo" placeholder="Correo" required class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <div class="section">
                <h2><i class="fas fa-map-marker-alt"></i> Datos Afectación</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Referencia"><i class="fas fa-map-pin"></i> Referencia:</label>
                            <input type="text" id="Referencia" name="Referencia" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="DireccionAfectacion" class="required"><i class="fas fa-map-marker"></i> Dirección de Afectación:</label>
                            <input type="text" id="DireccionAfectacion" name="DireccionAfectacion" required class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="BarrioAfectacion" class="required"><i class="fas fa-map-marker-alt"></i> Barrio de Afectación:</label>
                            <input type="text" id="BarrioAfectacion" name="BarrioAfectacion" required class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="DescripcionAfectacion" class="required"><i class="fas fa-info-circle"></i> Descripción de la Afectación:</label>
                            <textarea id="DescripcionAfectacion" name="DescripcionAfectacion" required class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="TipoAlumbrado" class="required"><i class="fas fa-lightbulb"></i> Tipo de Alumbrado:</label>
                            <select id="TipoAlumbrado" name="TipoAlumbrado" required class="form-control">
                                <option value="Urbano">Urbano</option>
                                <option value="Rural">Rural</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="DatosRelacionados"><i class="fas fa-link"></i> Datos Relacionados:</label>
                            <input type="text" id="DatosRelacionados" name="DatosRelacionados" placeholder="Datos relacionados" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label><i class="fas fa-image"></i> Imagen:</label>
                    <input name="Imagen" type="file" class="form-control">
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Enviar" class="btn btn-primary">
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        // Script para establecer la fecha actual en el campo FechaRegistro al cargar la página
        document.addEventListener('DOMContentLoaded', function () {
            var fechaActual = new Date();
            fechaActual.setMinutes(fechaActual.getMinutes() - fechaActual.getTimezoneOffset());
            var fechaLocal = fechaActual.toISOString().slice(0, 10);
            document.getElementById('FechaRegistro').value = fechaLocal;
        });

        // Manejo del evento submit del formulario
        document.getElementById('pqrsForm').addEventListener('submit', function (event) {
            event.preventDefault();

            fetch('@Url.Action("Enviarpqrs", "Pqrs")', {
                method: 'POST',
                body: new FormData(document.getElementById('pqrsForm')),
            })
            .then(response => response.json())
            .then(data => {
                const pqrsId = data.consecutivo;
                Swal.fire({
                    title: 'PQRS Creada',
                    text: 'El PQRS se ha creado correctamente. ID: ' + pqrsId,
                    icon: 'success',
                    confirmButtonText: 'Aceptar'
                }).then((result) => {
                    window.location.href = '@Url.Action("inicio", "Login")';
                });
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'Ocurrió un error al crear el PQRS. Por favor, inténtalo de nuevo más tarde.',
                    icon: 'error',
                    confirmButtonText: 'Aceptar'
                });
            });
        });
    </script>
</body>
</html>
