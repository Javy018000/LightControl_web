<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Product+Sans&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Product Sans', sans-serif;
            background: linear-gradient(to bottom, #87CEEB, #007bff);
            overflow-x: hidden;
        }

        .container-body-content {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            width: 90%;
            max-width: 800px;
            margin: 20px auto;
        }

        .section {
            margin-bottom: 20px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
            background-color: rgba(255, 255, 255, 0.8);
            transition: box-shadow 0.3s ease;
        }

            .section:hover {
                box-shadow: 0 0 20px rgba(0, 123, 255, 0.8);
            }

        .section-title {
            background-color: #007bff;
            color: white;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
            text-align: center;
            font-size: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .section-title i {
                margin-right: 10px;
            }

        .btn-primary, .btn-danger, .btn-success {
            padding: 7px 13px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            color: #fff;
            border: none;
            outline: none;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
            transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out, box-shadow 0.2s ease;
            align-items: center;
            justify-content: center;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-primary:hover, .btn-danger:hover, .btn-success:hover {
                box-shadow: 0 0 20px rgba(0, 123, 255, 0.8);
            }

        .img-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .img-container img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            }
    </style>
</head>
<body>
    <div class="container-body-content">
        <div class="card">
            <div class="section-title"><i class="fas fa-info-circle"></i> Detalles PQRS</div>
        </div>
        <div class="card-body">
            <form action="" method="post">
                <div class="section">
                    <div class="section-title"><i class="fas fa-info-circle"></i> Datos Generales</div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Consecutivo:</label>
                                <input type="text" name="Idpqrs" class="form-control" value="@Model.Idpqrs" readonly />
                            </div>
                            <div class="form-group">
                                <label>Fecha de Registro:</label>
                                <input type="text" name="FechaRegistro" class="form-control" value="@Model.FechaRegistro" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tipo de PQRS:</label>
                                <input type="text" name="TipoPqrs" class="form-control" value="@Model.Tipopqrs" readonly />
                            </div>
                            <div class="form-group">
                                <label>Canal:</label>
                                <input type="text" name="Canal" class="form-control" value="@Model.Canal" readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section">
                    <div class="section-title"><i class="fas fa-info-circle"></i> Datos de Usuario</div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Nombre:</label>
                                <input type="text" name="Nombre" class="form-control" value="@Model.Nombre" readonly />
                            </div>
                            <div class="form-group">
                                <label>Apellido:</label>
                                <input type="text" name="Apellido" class="form-control" value="@Model.Apellido" readonly />
                            </div>
                            <div class="form-group">
                                <label>Tipo de Documento:</label>
                                <input type="text" name="TipoDoc" class="form-control" value="@Model.TipoDoc" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Documento:</label>
                                <input type="text" name="Documento" class="form-control" value="@Model.Documento" readonly />
                            </div>
                            <div class="form-group">
                                <label>Teléfono:</label>
                                <input type="text" name="Telefono" class="form-control" value="@Model.Telefono" readonly />
                            </div>
                            <div class="form-group">
                                <label>Correo:</label>
                                <input type="text" name="Correo" class="form-control" value="@Model.Correo" readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section">
                    <div class="section-title"><i class="fas fa-info-circle"></i> Datos de Afectación</div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Dirección Afectación:</label>
                                <input type="text" name="DireccionAfectacion" class="form-control" value="@Model.DireccionAfectacion" readonly />
                            </div>
                            <div class="form-group">
                                <label>Barrio Afectación:</label>
                                <input type="text" name="BarrioAfectacion" class="form-control" value="@Model.BarrioAfectacion" readonly />
                            </div>
                            <div class="form-group">
                                <label>Tipo de Alumbrado:</label>
                                <input type="text" name="TipoAlumbrado" class="form-control" value="@Model.TipoAlumbrado" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Descripción Afectación:</label>
                                <input type="text" name="DescripcionAfectacion" class="form-control" value="@Model.DescripcionAfectacion" readonly />
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Datos Relacionados:</label>
                                    <input type="text" name="DatosRelacionados" class="form-control" value="@Model.DatosRelacionados" readonly />
                                </div>
                                <div class="form-group">
                                    <label>Estado:</label>
                                    <input type="text" name="EstadoNombre" class="form-control" value="@Model.EstadoNombre" readonly />
                                </div>
                                <div class="form-group img-container">
                                    <label>Recursos:</label>
                                    <img src="@ViewBag.ImagenDataUrl" alt="Recursos">
                                </div>
                            </div>
                        </div>
                </div>

                <div class="button-container text-center">

                    <a href="@Url.Action("pqrssinasignar_usuario", "pqrs")" class="btn btn-danger btn-sm"><i class="fas fa-arrow-left"></i> Atrás</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
