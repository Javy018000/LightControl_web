@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ver Toda la Infraestructura</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Product+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>
        body {
            font-family: 'Product Sans', sans-serif;
            background: linear-gradient(to bottom, #87CEEB, #007bff);
            padding: 20px;
        }

        .main-header {
            background-color: #17a2b8;
            color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
        }

        .filter-container {
            text-align: center;
            margin-bottom: 20px;
        }

            .filter-container select {
                padding: 10px 20px;
                font-size: 16px;
                border-radius: 5px;
                border: 1px solid #007bff;
                background-color: #f8f9fa;
                transition: all 0.3s ease;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                max-width: 250px;
                margin: 0 auto;
            }

                .filter-container select:hover {
                    background-color: #e2e6ea;
                }

        .search-container {
            text-align: center;
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .search-container input {
                padding: 10px 20px;
                font-size: 16px;
                border-radius: 5px;
                border: 1px solid #007bff;
                background-color: #f8f9fa;
                transition: all 0.3s ease;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                width: 100%;
                max-width: 500px;
                margin-right: 10px;
            }

                .search-container input:hover {
                    background-color: #e2e6ea;
                }

            .search-container button {
                padding: 10px 20px;
                font-size: 16px;
                border-radius: 5px;
                border: 1px solid #007bff;
                background-color: #007bff;
                color: #fff;
                transition: all 0.3s ease;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                cursor: pointer;
            }

                .search-container button:hover {
                    background-color: #0056b3;
                }

        .content {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .table-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            padding: 20px;
            flex: 0 0 55%;
            max-height: 650px;
            overflow-y: auto;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: center;
            word-wrap: break-word;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        td {
            background-color: #f8f9fa;
            transition: background-color 0.3s ease;
        }

            td:hover {
                background-color: #e9ecef;
            }

        .btn {
            padding: 8px 15px;
            font-size: 14px;
            font-weight: bold;
            line-height: 1.5;
            text-align: center;
            border-radius: 5px;
            transition: all 0.3s ease;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #117a8b;
            }

        .map-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            padding: 20px;
            flex: 0 0 43%; 
            height: 650px; 
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            position: relative;
        }

        .map {
            width: 100%;
            height: 100%;
            border-radius: 10px;
        }

        .text-center a {
            font-size: 16px;
        }

        .map-buttons-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
            gap: 10px;
        }

            .map-buttons-container .btn {
                font-size: 14px;
                padding: 5px 10px;
            }

        .btn-sodio {
            background-color: #4AF0B7;
            border-color: #4AF0B7;
        }

            .btn-sodio:hover {
                background-color: #3abf9d;
                border-color: #32a08b;
            }

        .btn-led {
            background-color: #F59E56; 
            border-color: #F59E56; 
        }

            .btn-led:hover {
                background-color: #e48940; 
                border-color: #d57a3a; 
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5 mb-4 text-center main-header"><i class="fas fa-cogs"></i> Ver Toda la Infraestructura</h1>

        <div class="filter-container">
            <label for="typeFilter">Filtrar por tipo: </label>
            <select id="typeFilter">
                <option value="">Seleccionar</option>
                <option value="LED">LED</option>
                <option value="SODIO">SODIO</option>
            </select>
        </div>

        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Buscar en la tabla...">
            <button id="searchButton"><i class="fas fa-search"></i></button>
        </div>

        <div class="map-buttons-container">
            <button class="btn btn-sodio" id="loadSodio">Cargar SODIO</button>
            <button class="btn btn-led" id="loadLed">Cargar LED</button>
        </div>

        <div class="content">
            <div class="table-card">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Latitud</th>
                            <th>Longitud</th>
                            <th>Línea</th>
                            <th>Tipo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="infraestructuraTable">
                        @foreach (var infraestructura in Model)
                        {
                            if (infraestructura.tipo == "LED" || infraestructura.tipo == "SODIO")
                            {
                                <tr>
                                    <td>@infraestructura.codigo</td>
                                    <td>@infraestructura.latitud.ToString().Replace(',', '.')</td> <!-- Reemplazar coma por punto -->
                                    <td>@infraestructura.longitud.ToString().Replace(',', '.')</td> <!-- Reemplazar coma por punto -->
                                    <td>@infraestructura.linea</td>
                                    <td>@infraestructura.tipo</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("VerInfoDetallada", "Infraestructura", new { id = infraestructura.codigo })" class="btn btn-info">Ver info</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="map-card">
                <div id="map" class="map"></div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        $(document).ready(function() {
            var map = L.map('map').setView([4.861, -74.032], 14);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
            }).addTo(map);

            function clearMarkers() {
                map.eachLayer(function (layer) {
                    if (layer instanceof L.Marker) {
                        map.removeLayer(layer);
                    }
                });
            }

            function addMarker(lat, lng, popupText, color) {
                var marker = L.circleMarker([lat, lng], {
                    radius: 8,
                    fillColor: color,
                    color: "#000",
                    weight: 1,
                    opacity: 1,
                    fillOpacity: 0.8
                }).addTo(map);

                marker.bindPopup(popupText);
            }

            $('#loadSodio').click(function() {
                clearMarkers();
                @foreach (var infraestructura in Model)
                {
                    if (infraestructura.tipo == "SODIO")
                    {
                        <text>
                        addMarker(@infraestructura.latitud.ToString().Replace(',', '.'), @infraestructura.longitud.ToString().Replace(',', '.'), '@infraestructura.codigo', '#4AF0B7');
                        </text>
                    }
                }
            });

            $('#loadLed').click(function() {
                clearMarkers();
                @foreach (var infraestructura in Model)
                {
                    if (infraestructura.tipo == "LED")
                    {
                        <text>
                        addMarker(@infraestructura.latitud.ToString().Replace(',', '.'), @infraestructura.longitud.ToString().Replace(',', '.'), '@infraestructura.codigo', '#F59E56');
                        </text>
                    }
                }
            });

            $('#typeFilter').on('change', function() {
                var selectedType = $(this).val().toLowerCase();
                $('#infraestructuraTable tr').filter(function() {
                    $(this).toggle($(this).find('td:eq(4)').text().toLowerCase().indexOf(selectedType) > -1 || selectedType === "")
                });
            });

            $('#searchButton').click(function() {
                var searchValue = $('#searchInput').val().toLowerCase();
                $('#infraestructuraTable tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(searchValue) > -1)
                });
            });

            
            function sortTable() {
                var rows = $('#infraestructuraTable tr').get();
                rows.sort(function(a, b) {
                    var A = $(a).children('td').eq(0).text().toUpperCase(); 
                    var B = $(b).children('td').eq(0).text().toUpperCase();

                    if ($.isNumeric(A) && $.isNumeric(B)) {
                        return parseFloat(A) - parseFloat(B);
                    }

                    if (A < B) {
                        return -1;
                    }
                    if (A > B) {
                        return 1;
                    }
                    return 0;
                });

                $.each(rows, function(index, row) {
                    $('#infraestructuraTable').append(row);
                });
            }

           
            sortTable();
        });
    </script>
</body>
</html>